extends base.pug

block content
    div.container
        h1= message
        form(action="/submit", method="post", class="form-login")
            input(type="text", id="name" name="name" placeholder="Enter your name", required) 
            input(type="password", id="password" name="password" placeholder="Enter your password", required)
            button(type="submit", class="btn")= btnMsg
            a(href="/login", class='text-center') Already have an account